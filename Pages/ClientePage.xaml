<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste_BTG_CRUD_Cliente.Pages.ClienteWindow"
             BackgroundColor="Silver"
               Title="">

    <Grid RowDefinitions="Auto,*" Padding="10" RowSpacing="10">
        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="20">
            <Label Grid.Column="0" 
                Style="{StaticResource Label24BoldStyle}" 
                VerticalOptions="Center"
                Text="Customer"/>
            <Button Grid.Column="1" 
                CornerRadius="10" HorizontalOptions="End" 
                Style="{StaticResource Button12_DarkBlue}"
                Text="Delete customer"
                Command="{Binding DeletarClienteCommand}" 
                IsVisible="{Binding ModoDeletar}"/>
            <Button Grid.Column="2" 
                CornerRadius="10" 
                Style="{StaticResource Button12_DarkBlue}"
                Text="Add customer"
                Command="{Binding SalvarClienteCommand}"/>
        </Grid>

        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto,Auto">
            <Grid Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="10" >
                <Label Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   Text="Name" />
                <Border Grid.Column="1" Style="{StaticResource BorderEntry}">
                    <Entry Placeholder="Name" Style="{StaticResource Entry24Style}"
                       Text="{Binding Cliente.Name, Mode=TwoWay}" IsEnabled="{Binding ModoEdicao}"/>
                </Border>
            </Grid>

            <Grid Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="10" >
                <Label Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                    Text="Last Name" />
                <Border Grid.Column="1" Style="{StaticResource BorderEntry}">
                    <Entry Placeholder="Last Name" Style="{StaticResource Entry24Style}"
                        Text="{Binding Cliente.Lastname, Mode=TwoWay}" IsEnabled="{Binding ModoEdicao}"/>
                </Border>
            </Grid>

            <Grid Row="2" ColumnDefinitions="Auto,*" ColumnSpacing="10" >
                <Label Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                    Text="Age" />
                <Border Grid.Column="1" Style="{StaticResource BorderEntry}">
                    <Entry Placeholder="Age" Style="{StaticResource Entry24Style}" Keyboard="Numeric"
                        Text="{Binding Cliente.Age, Mode=TwoWay}" IsEnabled="{Binding ModoEdicao}"/>
                </Border>
            </Grid>

            <Grid Row="2" ColumnDefinitions="Auto,*" ColumnSpacing="10" >
                <Label Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                    Text="Address" />
                <Border Grid.Column="1" Style="{StaticResource BorderEntry}">
                    <Entry Placeholder="Address" Style="{StaticResource Entry24Style}" Keyboard="Numeric"
                    Text="{Binding Cliente.Address, Mode=TwoWay}" IsEnabled="{Binding ModoEdicao}"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>