<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste_BTG_CRUD_Cliente.Pages.ListaClientePage"
             xmlns:cards="clr-namespace:Teste_BTG_CRUD_Cliente.Pages.Cards"
             BackgroundColor="Silver"
             Title="">
    
    <Grid RowDefinitions="Auto,*" Padding="10" RowSpacing="10">
        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="20">
            <Label Grid.Column="0" 
                 Style="{StaticResource Label24BoldStyle}" 
                 VerticalOptions="Center"
                 Text="Customer List"/>

            <Button Grid.Column="1" 
                CornerRadius="10" HorizontalOptions="End" 
                Style="{StaticResource Button12_DarkBlue}"
                Text="Add Customer"
                Command="{Binding AdicionarClienteCommand}"/>
        </Grid>

        <Label Grid.Row="1"
               Style="{StaticResource Label24BoldStyle}"
               Text="No registered customers"
               IsVisible="{Binding IsEmpty}"
               HorizontalOptions="Center" VerticalOptions="Center"/>
        
        <ListView Grid.Row="1"  HasUnevenRows="True" SeparatorColor="DarkBlue"
                  SelectionMode="Single" SeparatorVisibility="Default"
                  ItemsSource="{Binding ListaClientes}"
                  IsVisible="True" 
                  SelectedItem="{Binding ClienteSelecionado, Mode=TwoWay}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <cards:ClienteCard EditarClienteCommand="{Binding BindingContext.EditarClienteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" 
                                             ExcluirClienteCommand="{Binding BindingContext.ExcluirClienteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</ContentPage>